{
  "info": {
    "name": "Task-manager",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_postman_id": "auth-tasks-register-pass6-001"
  },
  "item": [
    {
      "name": "Register User",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"user@test.com\",\n  \"password\": \"123456\",\n  \"role\": \"user\"\n}"
        },
        "url": {
          "raw": "http://localhost:5000/api/v1/auth/register",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "v1", "auth", "register"]
        }
      }
    },
    {
      "name": "Login User",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"user@test.com\",\n  \"password\": \"123456\"\n}"
        },
        "url": {
          "raw": "http://localhost:5000/api/v1/auth/login",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "v1", "auth", "login"]
        }
      }
    },
    {
      "name": "Create Task",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Finish Project\",\n  \"description\": \"Complete backend and frontend integration\"\n}"
        },
        "url": {
          "raw": "http://localhost:5000/api/v1/tasks",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "v1", "tasks"]
        }
      }
    },
    {
      "name": "Get Tasks",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": {
          "raw": "http://localhost:5000/api/v1/tasks",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "v1", "tasks"]
        }
      }
    },
    {
      "name": "Delete Task (Admin Only)",
      "request": {
        "method": "DELETE",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": {
          "raw": "http://localhost:5000/api/v1/tasks/{{taskId}}",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "v1", "tasks", "{{taskId}}"]
        }
      }
    }
  ],
  "variable": [
    { "key": "token", "value": "" },
    { "key": "taskId", "value": "" }
  ]
